<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/L1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:background="#00FFFF"
    android:orientation="vertical"
    android:paddingTop="50dp"
    tools:ignore="RtlSymmetry">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="300dp">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello there!"
        android:textColor="#142D4D"
        android:textSize="28sp"
        android:textStyle="bold"
        android:paddingStart="30dp"
        tools:ignore="HardcodedText"/>
    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's get started, Fill your details to signup"
        android:textColor="#142D4D"
        android:textSize="14sp"
        android:paddingStart="30dp"
        tools:ignore="HardcodedText"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="16dp"
        android:elevation="30dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        android:foreground="@drawable/custome_edittext">

        <LinearLayout
            android:id="@+id/L2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Sign Up"
                android:textColor="#6082B6"
                android:textColorHighlight="@color/cardview_dark_background"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText"/>
            <TextView
                android:id="@+id/txt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entre Username "
                android:textColor="#000000"
                android:textSize="18sp"
                android:paddingStart="50dp"
                android:layout_marginTop="20dp"
                tools:ignore="HardcodedText"/>
            <EditText
                android:id="@+id/edt1"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:autofillHints="username"
                android:background="@drawable/custome_edittext"
                android:drawableStart="@drawable/baseline_person_24"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif-black"
                android:hint="Username"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColorHighlight="@color/cardview_dark_background"
                tools:ignore="HardcodedText"/>
            <TextView
                android:id="@+id/txt5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entre Mobile No. "
                android:textColor="#000000"
                android:textSize="18sp"
                android:paddingStart="50dp"
                android:layout_marginTop="20dp"
                tools:ignore="HardcodedText"/>
            <EditText
                android:id="@+id/edt2"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:autofillHints="phone"
                android:background="@drawable/custome_edittext"
                android:drawableStart="@drawable/baseline_phone_android_24"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif-black"
                android:hint="Mobile No."
                android:padding="10dp"
                android:textColorHighlight="@color/cardview_dark_background"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/txt6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entre E-mail ID "
                android:textColor="#000000"
                android:textSize="18sp"
                android:paddingStart="50dp"
                android:layout_marginTop="20dp"
                tools:ignore="HardcodedText"/>
            <EditText
                android:id="@+id/edt3"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:autofillHints="emailAddress"
                android:background="@drawable/custome_edittext"
                android:drawableStart="@drawable/baseline_email_24"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif-black"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColorHighlight="@color/cardview_dark_background"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/txt7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entre Password"
                android:textColor="#000000"
                android:textSize="18sp"
                android:paddingStart="50dp"
                android:layout_marginTop="20dp"
                tools:ignore="HardcodedText"/>
            <EditText
                android:id="@+id/edt4"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:autofillHints="password"
                android:background="@drawable/custome_edittext"
                android:drawableStart="@drawable/baseline_lock_24"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif-black"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColorHighlight="@color/cardview_dark_background"
                tools:ignore="HardcodedText"/>

            <TextView
                android:id="@+id/txt8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entre Role:"
                android:textColor="#000000"
                android:textSize="18sp"
                android:paddingStart="50dp"
                android:layout_marginTop="20dp"
                tools:ignore="HardcodedText"/>
            <RadioGroup
                android:id="@+id/rdg1"
                android:layout_width="250dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:autofillHints="password"
                android:background="@drawable/custome_edittext"
                android:drawableStart="@drawable/baseline_lock_24"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif-black"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColorHighlight="@color/cardview_dark_background"
                tools:ignore="HardcodedText">


            <RadioButton
                android:id="@+id/m1"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Owner"
                android:textSize="18sp"
                tools:ignore="HardcodedText">
            </RadioButton>

            <RadioButton
                android:id="@+id/f1"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Customer"
                android:textSize="18sp"
                tools:ignore="HardcodedText">
            </RadioButton>
            </RadioGroup>

            <Button
                android:id="@+id/btn1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="26dp"
                android:backgroundTint="#000080"
                android:fontFamily="sans-serif-light"
                android:text="SIGN UP"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                tools:ignore="HardcodedText"/>
            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#ffffff"
                android:fontFamily="sans-serif-light"
                android:paddingStart="40dp"
                android:text="Already have an account? LOGIN"
                android:textColor="#0000ff"
                android:textSize="12sp"
                tools:ignore="HardcodedText"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>