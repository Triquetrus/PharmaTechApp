<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/L1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:background="#00FFFF"
    android:orientation="vertical"
    android:paddingTop="20dp"
    tools:ignore="RtlSymmetry">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="300dp">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:src="@drawable/img2"
        android:contentDescription="login_image"
        tools:ignore="HardcodedText">
    </ImageView>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Again!"
        android:textColor="#142D4D"
        android:textSize="28sp"
        android:textStyle="bold"
        android:paddingStart="30dp"
        tools:ignore="HardcodedText">
    </TextView>
    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fill your details or continue with Google"
        android:textColor="#142D4D"
        android:textSize="14sp"
        android:textStyle=""
        android:paddingStart="30dp"
        tools:ignore="HardcodedText">
    </TextView>

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginStart="30dp"
       android:layout_marginEnd="30dp"
       android:layout_marginTop="16dp"
       android:elevation="30dp"
       app:cardCornerRadius="20dp"
       app:cardElevation="20dp"
       android:foreground="@drawable/custome_edittext">

       <LinearLayout
           android:id="@+id/L2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:orientation="vertical">

           <TextView
               android:id="@+id/txt3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginTop="16dp"
               android:text="Login"
               android:textColor="#6082B6"
               android:textColorHighlight="@color/cardview_dark_background"
               android:textSize="30sp"
               android:textStyle="bold"
               tools:ignore="HardcodedText" />

           <EditText
               android:id="@+id/edt3"
               android:layout_width="250dp"
               android:layout_height="50dp"
               android:layout_gravity="center"
               android:layout_marginTop="20dp"
               android:autofillHints="username"
               android:background="@drawable/custome_edittext"
               android:drawableStart="@drawable/baseline_person_24"
               android:drawablePadding="10dp"
               android:fontFamily="sans-serif-black"
               android:hint="Username"
               android:inputType="textPersonName"
               android:padding="10dp"
               android:textColorHighlight="@color/cardview_dark_background"
               tools:ignore="HardcodedText" />
           <EditText
               android:id="@+id/edt1"
               android:layout_width="250dp"
               android:layout_height="50dp"
               android:layout_gravity="center"
               android:layout_marginTop="20dp"
               android:autofillHints="emailAddress"
               android:background="@drawable/custome_edittext"
               android:drawableStart="@drawable/baseline_email_24"
               android:drawablePadding="10dp"
               android:fontFamily="sans-serif-black"
               android:hint="E-mail"
               android:inputType="textEmailAddress"
               android:padding="10dp"
               android:textColorHighlight="@color/cardview_dark_background"
               tools:ignore="HardcodedText" />


           <EditText
               android:id="@+id/edt2"
               android:layout_width="250dp"
               android:layout_height="50dp"
               android:layout_gravity="center"
               android:layout_marginTop="22dp"
               android:autofillHints="password"
               android:background="@drawable/custome_edittext"
               android:drawableStart="@drawable/baseline_lock_24"
               android:drawablePadding="10dp"
               android:fontFamily="sans-serif-black"
               android:hint="Password"
               android:inputType="textPassword"
               android:padding="10dp"
               android:textColorHighlight="@color/cardview_dark_background"
               tools:ignore="HardcodedText"/>

           <Button
               android:id="@+id/btn3"
               android:layout_width="wrap_content"
               android:layout_height="48dp"
               android:layout_marginStart="26dp"
               android:backgroundTint="#ffffff"
               android:fontFamily="sans-serif-medium"
               android:text="Forgotten your password ?"
               android:textColor="#000000"
               android:textSize="10sp"
               tools:ignore="HardcodedText">
           </Button>

           <Button
               android:id="@+id/btn1"
               android:layout_width="250dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginTop="10dp"
               android:backgroundTint="#000080"
               android:fontFamily="sans-serif-light"
               android:text="LOGIN"
               android:textColor="#FFFFFF"
               android:textSize="22sp"
               tools:ignore="HardcodedText">
           </Button>

           <TextView
               android:id="@+id/txt4"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginTop="12dp"
               android:text="(or)"
               android:textColor="#142D4D"
               android:textSize="20sp"
               tools:ignore="HardcodedText">
           </TextView>

           <Button
               android:id="@+id/btn2"
               android:layout_width="300dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginBottom="16dp"
               android:backgroundTint="#ffffff"
               android:fontFamily="sans-serif-light"
               android:paddingStart="40dp"
               android:text="Continue with Google"
               android:textColor="#0000ff"
               android:textColorHighlight="@color/cardview_dark_background"
               android:textSize="16sp"
               app:icon="@drawable/google1"
               app:iconPadding="-8dp"
               app:iconTint="@color/black"
               tools:ignore="HardcodedText">

           </Button>

       </LinearLayout>

   </androidx.cardview.widget.CardView>
</LinearLayout>
</ScrollView>