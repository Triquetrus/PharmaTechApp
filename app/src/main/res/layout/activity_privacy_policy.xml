<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:background="@color/white"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <Button
        android:id="@+id/btn2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="#FFFFFF"
        android:drawableEnd="@drawable/baseline_arrow_back_24"
        android:contentDescription="back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/title_privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="16dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/effective_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Effective Date: 10 July 2024"
            android:textSize="16sp"
            android:paddingBottom="16dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/introduction1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to PharmaTech!\n\n We operate the PharmaTech mobile application (hereinafter referred to as the 'Service')."
        android:textSize="16sp"
        android:paddingBottom="16dp"
        android:textColor="@color/black" />

        <TextView
            android:id="@+id/introduction2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" This page informs you of our policies regarding the collection, use, and disclosure of personal data when you use our Service and the choices you have associated with that data."
            android:textSize="16sp"
            android:paddingBottom="16dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/data_collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Data Collection: We collect personal data such as name, address, and phone number to provide and improve our Service."
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/usage_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Usage Data: We may collect information on how the Service is accessed and used, including device type, IP address, and browser type."
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/data_usage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Data Usage: We use the collected data to provide customer support, notify you about changes to our Service, and improve our Service."
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/data_sharing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. Data Sharing: We do not share your personal data with third parties except to comply with legal obligations or protect our rights."
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/security"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. Security: We take appropriate security measures to protect against unauthorized access, alteration, disclosure, or destruction of your personal data."
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/childrens_privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6. Children's Privacy: Our Service does not address anyone under the age of 13. We do not knowingly collect personal data from children under 13."
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/user_rights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7. User Rights: You have the right to access, update, or delete your personal data. You can do this by contacting us."
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/data_retention"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8. Data Retention: We retain your personal data only for as long as necessary to fulfill the purposes we collected it for."
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/changes_to_privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9. Changes to This Privacy Policy: We may update our privacy policy from time to time. We will notify you of any changes by posting the new privacy policy on this page."
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/conclusion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By using the Service, you agree to the collection and use of information in accordance with this policy."
            android:textSize="16sp"
            android:paddingBottom="16dp"
            android:textColor="@color/black" />

    </LinearLayout>
    </LinearLayout>
</ScrollView>
