<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <Button
        android:id="@+id/btn2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/background"
        android:drawableEnd="@drawable/baseline_arrow_back_24"
        android:contentDescription="back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/title_about_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="16dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/app_name_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App Name:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PharmaTech "
            android:textSize="16sp"
            android:paddingBottom="16dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/developer_name_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developer Name:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/developer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[Salman Riyajulkarim Bagwan]"
            android:textSize="16sp"
            android:paddingBottom="16dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/languages_used_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Languages Used:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/languages_used"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Java, XML"
            android:textSize="16sp"
            android:paddingBottom="16dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/license_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="License:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/license1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MIT License"
            android:textSize="16sp"
            android:paddingBottom="10dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/license2"
            android:foreground="@drawable/border1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Copyright (c) 2024 [PharmaTech]\n\n
Permission is hereby granted, free of charge, to any person obtaining a copy
of this software and associated documentation files (the 'Software'), to deal
in the Software without restriction, including without limitation the rights
to use, copy, modify, merge, publish, distribute, sublicense, and/or sell
copies of the Software, and to permit persons to whom the Software is
furnished to do so, subject to the following conditions:\n\n

The above copyright notice and this permission notice shall be included in all
copies or substantial portions of the Software.\n\n

THE SOFTWARE IS PROVIDED 'AS IS', WITHOUT WARRANTY OF ANY KIND, EXPRESS OR
IMPLIED, INCLUDING BUT NOT LIMITED TO THE WARRANTIES OF MERCHANTABILITY,
FITNESS FOR A PARTICULAR PURPOSE AND NONINFRINGEMENT. IN NO EVENT SHALL THE
AUTHORS OR COPYRIGHT HOLDERS BE LIABLE FOR ANY CLAIM, DAMAGES OR OTHER
LIABILITY, WHETHER IN AN ACTION OF CONTRACT, TORT OR OTHERWISE, ARISING FROM,
OUT OF OR IN CONNECTION WITH THE SOFTWARE OR THE USE OR OTHER DEALINGS IN THE
SOFTWARE."
            android:textSize="12sp"
            android:padding="8dp"
            android:paddingBottom="16dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/short_description_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Short Description:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="14dp"
            android:paddingBottom="8dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/short_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PharmaTech is designed to streamline the operations of medical stores by providing comprehensive management features.It allows store owners to efficiently manage their inventory, generate bills, keep track of daily sales, and maintain patient records."
            android:textSize="16sp"
            android:paddingBottom="16dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/contact_info_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Information:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/contact_info1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sam123@gmail.com"
            android:textSize="16sp"
            android:paddingBottom="10dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/contact_info2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7843XXXXXX"
            android:textSize="16sp"
            android:paddingBottom="16dp"
            android:textColor="@color/black" />

    </LinearLayout>
    </LinearLayout>
</ScrollView>
